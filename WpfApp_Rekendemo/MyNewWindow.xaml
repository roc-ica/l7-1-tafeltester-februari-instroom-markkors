<Window x:Class="WpfApp_Rekendemo.MyNewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_Rekendemo"
        mc:Ignorable="d"
        Title="MyNewWindow"
        Height="450"
        Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <TextBox Name="tb1"
                 Grid.Row="0"
                 Text="tb1"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 FontSize="24" />
        <TextBox Name="tb2"
                 Grid.Row="1"
                 Text="tb2"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 FontSize="24" />

        <Button x:Name="btnCalculate"
                Content="="
                Grid.Row="2" />

        <Label Name="lblResult"
               Grid.Row="3"
               Content="Result"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               FontSize="24" />

    </Grid>
</Window>
